//- errors ---------------------------------------------------------------------------
mixin error_alert(error)
	if error
		+alert_danger(error.name, error.message)

mixin error_alerts(hr_top, hr_bottom)
	if error || errors
		if hr_top
			hr
		div.error_alerts
			+error_alert(error)
			if errors
				for error in errors
					+error_alert(error)
		if hr_bottom
			hr