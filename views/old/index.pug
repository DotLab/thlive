extends layout

block content
  h1= title
  h4 Welcome to #[em #{title}]

  hr

  if mortal
    p It's #[em really nice] to have you back, #[mark #{mortal.name}].
    a.btn.btn-default(href='/users/logout') Logout
  else
    p Please, #[strong login] or #[strong register].
    div.row
      div.col-sm-1
        a.btn.btn-primary(href='/users/login') Login
      div.col-sm-1
        a.btn.btn-default(href='/users/register') Register

  