extends ../base

block head
	style.
		.tag {
			color: #39739d;
			background-color: #E1ECF4;
			border-color: transparent;

			position: relative;
			display: inline-block;
			padding: .4em .5em;
			margin: 2px 2px 2px 0;
			font-size: 11px;
			line-height: 1;
			white-space: nowrap;
			text-decoration: none;
			text-align: center;
			border-width: 1px;
			border-style: solid;
			border-radius: 0;
			transition: all .15s ease-in-out;
		}

		.tag:hover {
			color: #33658a;
			background-color: #cee0ed;
			border-color: rgba(0,0,0,0);
			text-decoration: none;
		}

block main
	div.container.mt-4
		a.btn.btn-sm.btn-primary.float-right(href='/tags/create') Add Tag
		h4= title
		hr
		
		div.row
			for tag in tags
				div.col-lg-3.col-md-4.col-sm-6.small.mb-2(style='border-bottom: 1px dotted #E4E6E7;')
					div #[a.p-1.tag(href=tag.url)= tag.master] Ã— #{tag.slaves.length}
					div.text-muted(style='height: 39px; overflow: hidden')= tag.excerpt
					div.my-2= tag.scores
		