extends layout

block content
  h1= title

  a.btn.btn-primary(href='/images/upload') Upload

  ul
  each image in images
    li
      a(href=image.url_detail) #{image.title}
      |  #[em (#{image.name_original} - #{image.sha1.substring(0,7)})] #[mark #{image.width}x#{image.height}] by #[a(href=image.artist.url_detail) #{image.artist.name}]