mixin error_alert(error)
  if error
      if error.msg
        +alert_danger('Error', error.msg)
      else
        +alert_danger(error.name, error.message)

mixin error_footer()
  if error || errors
    hr
    div#error_footer
      +error_alert(error)
      if errors
        for error in errors
          +error_alert(error)